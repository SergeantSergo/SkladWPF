<Window x:Class="SkladWPF.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkladWPF"
        mc:Ignorable="d"
        Title="" Height="500" Width="720" Background="Black" WindowStartupLocation="CenterScreen" MinHeight="500" MinWidth="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition />
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Frame x:Name="Frame" Background="White" Content="Frame" Grid.Row="1" Grid.ColumnSpan="10" NavigationUIVisibility="Hidden" Navigated="Frame_Navigated"/>


        <Button x:Name="InfoButton" Grid.Column="2" Content="ИНФОРМАЦИЯ" VerticalAlignment="Center"  Height="30" Background="#50E984" BorderBrush="Black" Click="InfoButton_Click_1" FontWeight="Bold" Margin="13,0,13,0"/>
        <Button x:Name="ApplicationsButton" Grid.Column="4" Content="ЗАПРОСЫ" VerticalAlignment="Center" Height="30" Background="#50E984" BorderBrush="Black" Click="ApplicationsButton_Click_1" FontWeight="Bold" Margin="13,0,13,0"/>
        <Button x:Name="ProductsButton" Grid.Column="6" Content="ПРОДУКЦИЯ" VerticalAlignment="Center" Height="30" Background="#50E984" BorderBrush="Black" Click="ProductsButton_Click" FontWeight="Bold" Margin="13,0,12,0"/>
        <Button x:Name="ExitButton" Grid.Column="8" Content="ВЫХОД" VerticalAlignment="Center" Height="30" Background="#50E984" BorderBrush="Black" Click="ExitButton_Click_1" FontWeight="Bold" Margin="12,0,12,0"/>
        <Rectangle HorizontalAlignment="Center" Height="50" Stroke="White" VerticalAlignment="Center" Width="100" Fill="White"/>
        <Rectangle HorizontalAlignment="Center" Height="50" Stroke="White" VerticalAlignment="Center" Width="50">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Resources/Svetodiodniesvetilnikidlyasklada.png"/>
            </Rectangle.Fill>
        </Rectangle>

